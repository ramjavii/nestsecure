# =============================================================================
# NESTSECURE - Variables de Entorno
# =============================================================================
# Copia este archivo como .env y ajusta los valores según tu entorno
# NUNCA commits el archivo .env con credenciales reales
# =============================================================================

# -----------------------------------------------------------------------------
# Entorno General
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Base de Datos PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=nestsecure
POSTGRES_PASSWORD=nestsecure_dev_2026
POSTGRES_DB=nestsecure_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# URL de conexión completa (asyncpg para async, psycopg2 para sync)
DATABASE_URL=postgresql+asyncpg://nestsecure:nestsecure_dev_2026@localhost:5432/nestsecure_db
DATABASE_ECHO=true

# Pool de conexiones
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# Seguridad y Autenticación
# -----------------------------------------------------------------------------
# IMPORTANTE: Genera una clave secreta única para producción
# Puedes usar: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production-2026

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Contraseña de primer admin
FIRST_SUPERUSER_EMAIL=admin@nestsecure.local
FIRST_SUPERUSER_PASSWORD=Admin123!SecurePassword

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_V1_PREFIX=/api/v1
BACKEND_PORT=8000

# CORS - Orígenes permitidos (JSON array)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000/api/v1

# -----------------------------------------------------------------------------
# Scanners (se configurarán más adelante)
# -----------------------------------------------------------------------------
# Nmap
NMAP_PATH=/usr/bin/nmap
NMAP_TIMEOUT=3600

# OpenVAS/GVM
GVM_HOST=localhost
GVM_PORT=9390
GVM_USERNAME=admin
GVM_PASSWORD=admin

# OWASP ZAP
ZAP_HOST=localhost
ZAP_PORT=8080
ZAP_API_KEY=

# Nuclei
NUCLEI_PATH=/usr/local/bin/nuclei
NUCLEI_TEMPLATES_PATH=/opt/nuclei-templates

# -----------------------------------------------------------------------------
# Reportes
# -----------------------------------------------------------------------------
REPORTS_DIR=/app/reports
TEMPLATES_DIR=/app/templates

# -----------------------------------------------------------------------------
# NVD API (para CVE)
# -----------------------------------------------------------------------------
NVD_API_KEY=
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# -----------------------------------------------------------------------------
# Email (para alertas)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@nestsecure.local

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_FORMAT=json
LOG_FILE=/app/logs/nestsecure.log
